<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>space.squid</groupId>
  <artifactId>squid-service</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <build>
    <resources>
      <resource>
        <targetPath>${project.build.directory}</targetPath>
        <filtering>true</filtering>
        <directory>${project.basedir}</directory>
      </resource>
    </resources>
    <finalName>squid-service</finalName>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-shade-plugin</artifactId>
          <version>2.3</version>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.0</version>
        <configuration>
          <source>${java.version}</source>
          <target>${java.version}</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>space.squid.SquidApplication</mainClass>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <outputDirectory>${project.build.directory}/latest</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.site.deploy.skip>true</maven.site.deploy.skip>
    <java.version>1.8</java.version>
    <dropwizard.guicey.version>4.0.1</dropwizard.guicey.version>
    <aws.version>1.11.93</aws.version>
    <dropwizard.version>1.0.6</dropwizard.version>
    <resource.basedir>src/main/resources/</resource.basedir>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <guice.inject.version>4.1.0</guice.inject.version>
    <guice.inject.extensions.version>4.1.0</guice.inject.extensions.version>
  </properties>
</project>

